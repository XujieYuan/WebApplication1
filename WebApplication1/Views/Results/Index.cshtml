<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/js/bootstrap.min.js"></script>
<script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
<!-- bradcam_area_start -->
<div class="bradcam_area breadcam_bg_2 overlay">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <h3>Self Test</h3>
            </div>
        </div>
    </div>
</div>
<!-- bradcam_area_end -->
<!-- quiz_area_start -->
<div class="quiz_area">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <div id="question1">
                    <h3><span class="label label-warning" id="qid">1</span> QUESTION 1</h3>
                </div>
                <div id="question2" style="display:none;">
                    <h3><span class="label label-warning" id="qid">2</span> QUESTION 2</h3>
                </div>
                <div id="question3" style="display:none;">
                    <h3><span class="label label-warning" id="qid">3</span> QUESTION 3</h3>
                </div>
                <div id="question4" style="display:none;">
                    <h3><span class="label label-warning" id="qid">4</span> QUESTION 4</h3>
                </div>
                <div id="question5" style="display:none;">
                    <h3><span class="label label-warning" id="qid">5</span> QUESTION 5</h3>
                </div>
            </div>
            <div class="modal-body">
                <div class="quiz" id="quiz1" data-toggle="buttons">
                    <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=1>1 Yes</label>
                    <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=0>2 No</label>
                </div>
                <div class="quiz" id="quiz2" data-toggle="buttons" style="display:none;">
                    <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=1>1 Yes</label>
                    <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=0>2 No</label>
                </div>
                <div class="quiz" id="quiz3" data-toggle="buttons" style="display:none;">
                    <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=1>1 Yes</label>
                    <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=0>2 No</label>
                </div>
                <div class="quiz" id="quiz4" data-toggle="buttons" style="display:none;">
                    <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=1>1 Yes</label>
                    <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=0>2 No</label>
                </div>
                <div class="quiz" id="quiz5" data-toggle="buttons" style="display:none;">
                    <label class="element-animation1 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=1>1 Yes</label>
                    <label class="element-animation2 btn btn-lg btn-primary btn-block"><span class="btn-label"><i class="glyphicon glyphicon-chevron-right"></i></span> <input type="radio" name="q_answer" value=0>2 No</label>
                </div>
                <div id="answer1" style="display:none;">
                    <p>
                        Fundamental Awareness (basic knowledge)
                    </p>
                </div>
                <div id="answer2" style="display:none;">
                    <p>
                        Novice (limited experience)
                    </p>
                </div>
                <div id="answer3" style="display:none;">
                    <p>
                        Intermediate (practical application)
                    </p>
                </div>
                <div id="answer4" style="display:none;">
                    <p>
                        Advanced (applied theory)
                    </p>
                </div>
                <div id="answer5" style="display:none;">
                    <p>
                        Expert (recognized authority)
                    </p>
                </div>
            </div>
            <div class="modal-footer text-muted">
                <div class="btn-default" id="finish1" style="display:none">
                    @Html.ActionLink("More info", "Quiz", new { id = 1 })
                </div>
                <div class="btn-default" id="finish2" style="display:none">
                    @Html.ActionLink("More info", "Quiz", new { id = 2 })
                </div>
                <div class="btn-default" id="finish3" style="display:none">
                    @Html.ActionLink("More info", "Quiz", new { id = 3 })
                </div>
                <div class="btn-default" id="finish4" style="display:none">
                    @Html.ActionLink("More info", "Quiz", new { id = 4 })
                </div>
                <div class="btn-default" id="finish5" style="display:none">
                    @Html.ActionLink("More info", "Quiz", new { id = 5 })
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .quiz_area{
        margin-top: 20px;
        margin-bottom: 30px;
    }
</style>
<!-- quiz_area_end -->

<script>
    $(function () {
        var i = 1;
        var totalCount = 0;
        $("label.btn").on('click', function () {
            var currentQuestion = '#question' + i;//'#question1'
            var currentQuiz = '#quiz' + i;
            ++i;
            var nextQuestion = '#question' + i;//'#question2'
            var nextQuiz = '#quiz' + i;
            var choice = $(this).find('input:radio').val();
            totalCount += parseInt(choice);
            $(currentQuiz).fadeOut();
            $(nextQuiz).fadeIn();
            $(currentQuestion).hide();
            $(nextQuestion).show();            
            if (i === 6) {
                if (totalCount === 0) {
                    $('#answer1').fadeIn();
                    $('#finish1').fadeIn();
                }
                else if (totalCount > 0 && totalCount < 2) {
                    $('#answer2').fadeIn();
                    $('#finish2').fadeIn();
                }
                else if (totalCount >= 2 && totalCount < 4) {
                    $('#answer3').fadeIn();
                    $('#finish3').fadeIn();
                }
                else if (totalCount >= 4 && totalCount < 6) {
                    $('#answer4').fadeIn();
                    $('#finish4').fadeIn();
                }
                else {
                    $('#answer5').fadeIn();
                    $('#finish5').fadeIn();
                }
            }
        });       
    });
</script>
